{% extends 'base.html.twig' %}

{% block title %}
    Register Page | Highlander
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/highlander/BlogStyle.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="form-auth-card">

            <div class="form-title">
                <div id="logo-box">
                    <img src="{{asset('images/ship-wheel-logo.png')}}">
                </div>
                <h2>
                    Highlander's Blog
                </h2>
            </div>

            <div class="form-auth-content">
                {{ form_start(form) }}
                <div class="form-group">
                {{ form_row(form.account_username, {
                    'label': 'Username',
                    'label_attr': {'class': 'form-label'},
                    'attr': {
                        'class': 'form-input-field',
                        'id': 'username',
                        'placeholder': 'Your username'
                    }
                }) }}
                </div>

                <div class="form-group">
                {{ form_row(form.account_password, {
                    'label': 'Password',
                    'label_attr': {'class': 'form-label'},
                    'attr': {
                        'class': 'form-input-field',
                        'placeholder': 'Password'
                    }
                }) }}
                </div>

                <div class="form-group">
                {{ form_row(form.account_repassword, {
                    'label': 'Repeat Password',
                    'label_attr': {'class': 'form-label'},
                    'attr': {
                        'class': 'form-input-field',
                        'placeholder': 'Repeat password'
                    }
                }) }}
                </div>

                <div class="form-group">
                {{ form_row(form.account_email, {
                    'label': 'E-Mail',
                    'label_attr': {'class': 'form-label'},
                    'attr': {
                        'class': 'form-input-field',
                        'placeholder': 'Your email'
                    }
                }) }}
                </div>

                {{ form_row(form.register, {
                    'attr': {
                        'class': 'form-input-submit'
                    }
                }) }}

                {{ form_end(form) }}
            </div>

            <div class="form-bottom-text">
                <p>Back to</p> <a href="{{path('blog_login_page')}}">Login</a>
            </div>
        </div>
{% endblock %}