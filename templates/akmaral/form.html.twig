{% extends 'base.html.twig' %}

{% block title %}About Me - Form{% endblock %}

{% block body %}
<div style="max-width: 700px; margin: auto; padding: 2rem;">
    <h1 style="text-align: center; margin-bottom: 2rem;">Submit Your Profile</h1>

    <div style="background-color: #f9f9f9; padding: 2rem; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
        {{ form_start(form) }}

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <div>{{ form_row(form.name) }}</div>
            <div>{{ form_row(form.title) }}</div>
        </div>

        <div style="margin-top: 1rem;">{{ form_row(form.description) }}</div>
        <div style="margin-top: 1rem;">{{ form_row(form.skills) }}</div>
        <div style="margin-top: 1rem;">{{ form_row(form.hobbies) }}</div>

        <h3 style="margin-top: 2rem;">Links</h3>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <div>{{ form_row(form.github) }}</div>
            <div>{{ form_row(form.linkedin) }}</div>
            <div>{{ form_row(form.kaggle) }}</div>
        </div>

        <button type="submit" style="margin-top: 2rem; width: 100%; padding: 0.8rem; background-color: #007bff; color: white; border: none; border-radius: 5px; font-weight: bold;">
            Submit
        </button>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
