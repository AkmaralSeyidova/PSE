{% extends 'base.html.twig' %}

{% block title %}About Akmaral{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 2rem auto; padding: 2rem; font-family: 'Segoe UI', sans-serif; background-color: #fff; box-shadow: 0 0 10px rgba(0,0,0,0.1); border-radius: 10px;">
    <h1 style="text-align: center; font-size: 2.2rem; margin-bottom: 0.5rem;">{{ about.name }}</h1>
    <h3 style="text-align: center; color: #666; font-weight: normal;">{{ about.title }}</h3>

    <section style="margin-top: 2rem;">
        <h2 style="border-bottom: 1px solid #ccc;">Description</h2>
        <p style="line-height: 1.6;">{{ about.description }}</p>
    </section>

    <section>
        <h2 style="border-bottom: 1px solid #ccc;">Skills</h2>
        <p style="line-height: 1.6;">{{ about.skills }}</p>
    </section>

    {% if about.hobbies %}
    <section>
        <h2 style="border-bottom: 1px solid #ccc;">Hobbies</h2>
        <p style="line-height: 1.6;">{{ about.hobbies }}</p>
    </section>
    {% endif %}

    <section>
        <h2 style="border-bottom: 1px solid #ccc;">Links</h2>
        <ul style="list-style: none; padding-left: 0;">
            {% if about.github %}
                <li>
                    <a href="{{ about.github }}" target="_blank" style="text-decoration: none; color: #0366d6;">
                        <strong>GitHub</strong> ↗
                    </a>
                </li>
            {% endif %}
            {% if about.linkedin %}
                <li>
                    <a href="{{ about.linkedin }}" target="_blank" style="text-decoration: none; color: #0a66c2;">
                        <strong>LinkedIn</strong> ↗
                    </a>
                </li>
            {% endif %}
            {% if about.kaggle %}
                <li>
                    <a href="{{ about.kaggle }}" target="_blank" style="text-decoration: none; color: #20beff;">
                        <strong>Kaggle</strong> ↗
                    </a>
                </li>
            {% endif %}
        </ul>
    </section>
</div>
{% endblock %}
