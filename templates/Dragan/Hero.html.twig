{% extends 'base.html.twig' %}

{% block title %}Pagina lui Dragan Dynamic{% endblock %}

{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('css/DragansStyle.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <img src="{{ asset('images/DragansPhoto.jpg') }}" alt="O imagine personală" class="personal-image">

        <div class="text-content">
            {% if content %}
                <h1>{{ content.title }}</h1>
                <p>{{ content.content }}</p>
            {% else %}
                <p>Nu există conținut disponibil.</p>
            {% endif %}

            <h3>Îmi place 3 chestii:</h3>
            <ul>
                <li>Gramatica</li>
                <li>Matematica</li>
            </ul>

            {% if app.request.query.get('error') %}
                <p style="color: red;">Autentificare eșuată! Verifică userul și parola.</p>
            {% endif %}

            <form action="{{ path('dragan_login') }}" method="POST">
                <label for="user">Utilizator:</label>
                <input type="text" id="user" name="user" required>

                <label for="password">Parolă:</label>
                <input type="password" id="password" name="password" required>

                <button type="submit">Log In</button>
            </form>
        </div>
    </div>
{% endblock %}
