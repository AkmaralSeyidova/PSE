{% extends 'base.html.twig' %}

{% block title %}Editează Pagina{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            padding: 20px;
        }

        h1 {
            color: #2c3e50;
        }

        form {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        textarea {
            height: 150px;
            resize: vertical;
        }

        button {
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

        button:hover {
            background-color: #2980b9;
        }
    </style>

    <h1>Editează conținutul</h1>
    
    <form method="post">
        <label>Titlu:</label>
        <input type="text" name="title" value="{{ content.title ?? '' }}" required>
        <br>
        <label>Conținut:</label>
        <textarea name="content" required>{{ content.content ?? '' }}</textarea>
        <br>
        <button type="submit">Salvează</button>
    </form>

    <form action="{{ path('dragan_logout') }}" method="post">
        <button type="submit">Logout</button>
    </form>
{% endblock %}
